@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <title>Programmer's Landing Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            text-align: center;
            padding-top: 100px;
        }

        h1 {
            font-size: 32px;
            margin-bottom: 30px;
        }

        p {
            font-size: 18px;
            margin-bottom: 20px;
        }

        a {
            color: #333;
            text-decoration: none;
        }

        .cta-button {
            display: inline-block;
            padding: 12px 24px;
            font-size: 16px;
            font-weight: bold;
            background-color: #007bff;
            color: #fff;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .cta-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>Welcome to the Programmer's Landing Page</h1>
    <p>Get inspired, explore new technologies, and enhance your coding skills.</p>
    <a href="https://www.example.com" class="cta-button">Get Started</a>
</body>

