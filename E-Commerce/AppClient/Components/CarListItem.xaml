<UserControl x:Class="AppClient.Components.CarListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AppClient.Components" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Image Grid.Row="0" Source="{Binding ImageSrc}" Stretch="UniformToFill" Height="100" Width="Auto" Margin="0,10,0,0"/>
        <TextBlock Grid.Row="1" Text="{Binding Make}" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="2" Text="{Binding Model}" FontSize="14" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="3" Text="{Binding Year}" FontSize="14" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="4" Text="{Binding Mileage}" FontSize="14" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="5" Text="{Binding Price}" FontSize="14" Margin="0,0,0,5"/>
    </Grid>
</UserControl>
