<UserControl x:Class="AppAdmin.Components.CarListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppAdmin.Components"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="320">
    <Grid Margin="10,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Make: " VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Car.Make}" Margin="5,0,10,0" VerticalAlignment="Center"/>
            <TextBlock Text="Model: " VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Car.Model}" Margin="5,0,10,0" VerticalAlignment="Center"/>
            <TextBlock Text="Year: " VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Car.Year}" Margin="5,0,10,0" VerticalAlignment="Center"/>
            <TextBlock Text="Price: " VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Car.Price}" Margin="5,0,10,0" VerticalAlignment="Center"/>
            <Image Source="{Binding Car.imgUrl}" Width="60" Height="60" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
